@model List<ECommerceWebsite.Models.Testimonial>

@{
    ViewData["Title"] = "Home Page";
}
<style>
    .custom-button {
        font-family: "Raleway", sans-serif;
        text-transform: uppercase;
        font-weight: 600;
        font-size: 12px;
        letter-spacing: 1px;
        display: inline-block;
        padding: 12px 40px;
        border-radius: 50px;
        transition: 0.5s;
        margin-top: 30px;
        color: #fff;
        background: #696cff;
        outline: none;
        border: none;
    }


        .custom-button:hover {
            background: #696cff; /* Adjust the hover background color as needed */
        }

    .testimonials .swiper-pagination .swiper-pagination-bullet-active {
        background-color: #0d6efd;
    }

    .testimonials .swiper-pagination .swiper-pagination-bullet {
        border: 1px solid #0d6efd;
    }



    .video-container {
        position: relative;
        width: 100%;
        height: 100vh;
        overflow: hidden;
    }

        /* Video background settings */
        .video-container video {
            position: absolute;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: -1;
            transform: translate(-50%, -50%);
        }

    /* Overlay content (text and button) */
    .content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: #fff;
        font-family: "Raleway", sans-serif;
    }

        .content h1 {
            font-size: 3em;
            margin-bottom: 20px;
        }

        .content .btn {
            font-family: "Raleway", sans-serif;
            text-transform: uppercase;
            font-weight: 600;
            font-size: 15px;
            letter-spacing: 1px;
            display: inline-block;
            padding: 12px 40px;
            border-radius: 50px;
            transition: 0.5s;
            margin-top: 30px;
            color: #fff;
            background: #696cff;
        }

            .content .btn:hover {
                background-color: #5053c6;
            }
</style>

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center">
    <div class="container d-flex flex-column align-items-center" data-aos="zoom-in" data-aos-delay="100">
        <h1>Kitty Shop</h1>
        <h2 style="color:black;"> Shop with us and pamper your kitty with the best products available! 🐾   </h2>
        <a asp-action="Index" asp-controller = "Products" style="background-color:#696cff" class="btn-about">Shop now </a>
    </div>
</section><!-- End Hero -->


<!-- ======= Testimonials Section ======= -->
<section id="testimonials" class="testimonials">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Our Customers Review</h2>
            <p>Check out what our customers are saying here!</p>
       </div>

        <div class="testimonials-slider swiper" data-aos="fade-up" data-aos-delay="100">
            <div class="swiper-wrapper">

                 @foreach (var item in Model)
                {
                    <div class="swiper-slide">
                        <div class="testimonial-item">
                            <img src="~/images/usrProfileImages/@item?.User.UserPhoto" class="testimonial-img" alt="">
                            <h3>@item?.User.FirstName</h3>
                            <p>
                                <i class="bx bxs-quote-alt-left quote-icon-left"></i>
                                @item.Content
                                <i class="bx bxs-quote-alt-right quote-icon-right"></i>
                            </p>
                        </div>
                    </div>
                }

            </div>
            <div class="swiper-pagination"></div>
        </div>

    </div>
</section>

<section style="width:100%;height300px;">
    <div class="video-container" >
        
            <video  autoplay muted loop>
				<source src="~/assets1/img/855282-hd_1280_720_25fps.mp4" type="video/mp4" />
			</video>
           
        

        <div class="content">
            <h1 >Discover the exciting new services that will be available soon.</h1>
            <a asp-action="Services" asp-controller="Home"  class="btn">Discover</a>
        </div>
    </div>

</section>
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Testimonials</h2>
            <p>Your experience matters to us,share your testimonial and help others discover our services!</p>
         </div>


        <div class="row mt-5">

            <div class="col-lg-4">
                <div class="info">
                    <div class="address">
                        <i class="bi bi-geo-alt"></i>
                        <h4>Location:</h4>
                        <p>A108 Adam Street, New York, NY 535022</p>
                    </div>

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <p>info@example.com</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Call:</h4>
                        <p>+1 5589 55488 55s</p>
                    </div>

                </div>

            </div>

            <div class="col-lg-8 mt-5 mt-lg-0">

                <form asp-action="Create" asp-controller="Testimonials" >


                    <div class="form-group mt-3">
                        <textarea class="form-control" name="message" rows="5" placeholder="Message" required></textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="custom-button">
                            Send Message
                        </button>
                    </div>


                </form>

            </div>

        </div>

    </div>
</section>
