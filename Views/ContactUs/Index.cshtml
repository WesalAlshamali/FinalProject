@model IEnumerable<ECommerceWebsite.Models.ContactUs>

@{
    ViewData["Title"] = "Contact Us";
    Layout = "_AdminLayout";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            
               
               
                <div class="table-responsive">
                    <table class="table  ">
                        <thead >
                            <tr>
                                <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                       
                                <th scope="col">@Html.DisplayNameFor(model => model.Message)</th>
                            
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                
                                    <td>@Html.DisplayFor(modelItem => item.Message)</td>
                            
                                    <td>
                                   
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
          
       
        
        

        
        </div>
    </div>
</div>
<style>
    th{
        font-weight:bold;
        color:black;
    }
</style>