@model List<ECommerceWebsite.Models.OrderItem>


 <style>
     footer{
     margin-top:175px;
     }
 </style>
<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <!-- Alert Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <strong>Oops!</strong> @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <strong>Success!</strong> @TempData["SuccessMessage"]
        </div>
    }
    <h1>Your Shopping Cart 🐾 </h1>
    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-lg-8 mb-4">
                <table class="table table-hover">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="vertical-align: middle;">
                                    <div class="d-flex align-items-center">
                                        <img src="~/images/productsimages/@item.Product.ProductImage" alt="@item.Product.ProductName" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover; margin-right: 15px;">
                                        <span>@item.Product?.ProductName</span>
                                    </div>
                                </td>
                                <td style="vertical-align: middle;">@item.UnitPrice.ToString("C")</td>
                                <td style="vertical-align: middle;">
                                    <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                        <input type="hidden" name="orderItemID" value="@item.OrderItemID" />
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm d-inline" style="width: 80px;" />
                                        <button type="submit" class="btn btn-sm">
                                            <i class="fa-solid fa-cart-plus" style="color: #0d6efd; font-size: 20px;"></i>
                                        </button>
                                    </form>
                                </td>
                                <td style="vertical-align: middle;">@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                                <td style="vertical-align: middle;">
                                    <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                        <input type="hidden" name="orderItemID" value="@item.OrderItemID" />
                                        <button type="submit" class="btn btn-sm">
                                            <i class="fa-solid fa-xmark" style="color: #ff0505; font-size: 20px;"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <div class="border p-3 rounded">
                    <h3 class="text-center mb-3">Order Summary</h3>
                    <div class="row mb-2">
                        <div class="col">Items:</div>
                        <div class="col text-end">@Model.Count()</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">Subtotal:</div>
                        <div class="col text-end">@Model.Sum(item => item.Quantity * item.UnitPrice).ToString("C")</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col">Shipping:</div>
                        <div class="col text-end">$5.00</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col"><strong>Total:</strong></div>
                        <div class="col text-end">
                            <strong>
                                @if (Context.Session.GetString("NewTotalAmount") is not null)
                                {
                                    @Context.Session.GetString("NewTotalAmount")
                                }
                                else
                                {
                                    @Model.Sum(item => (item.Quantity * item.UnitPrice) + 5).ToString("C")
                                }
                            </strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Billing Information -->
        <div class="border-top mt-5 pt-4">
            <h3 class="text-center mb-4">Billing Information</h3>
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <form asp-action="Checkout" method="post">
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="fullName" name="FullName" placeholder="John Doe" required />
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="address" name="Address" placeholder="123 Main St" required />
                        </div>
                        <div class="mb-3">
                            <label for="city" class="form-label">City</label>
                            <input type="text" class="form-control" id="city" name="City" placeholder="Cat City" required />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="state" class="form-label">State</label>
                                <input type="text" class="form-control" id="state" name="State" placeholder="NY" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="postalCode" class="form-label">Postal Code</label>
                                <input type="text" class="form-control" id="postalCode" name="PostalCode" placeholder="10001" required />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" class="form-control" id="country" name="Country" placeholder="United States" required />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Proceed to Payment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }

       
    
    else
    {
        <br /> <br />
        <div class="alert alert-info text-center">
            Your cart is currently empty. Explore our <a asp-controller="Products" asp-action="Index" class="alert-link" style="color:#696cff;">cat products</a> to find something purrfect!
        </div>
    }
</div>








